<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sofaCate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtsofadef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="175dp"
            android:text="Crisp"/>
        <ImageView
            android:id="@+id/sofa_default"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/sofa"/>
        <TextView
            android:id="@+id/txtsofablack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="175dp"
            android:text="Royal"/>
        <ImageView
            android:id="@+id/sofa_black"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/txtsofablack"
            android:src="@drawable/sofablack"/>

    </LinearLayout>

</ScrollView>