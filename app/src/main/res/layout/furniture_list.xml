<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListFurniture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtsofa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Sofa"
            android:textAlignment="center"
            android:textSize="22dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgsofa"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sofa" />

        <TextView
            android:id="@+id/txtbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Bookcase"
            android:textSize="22dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgbc"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/txtbc"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bc" />
        <TextView
            android:id="@+id/txtcloset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closet"
            android:textSize="22dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgcloset"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/closet" />
        <TextView
            android:id="@+id/txtcrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crib"
            android:textSize="22dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgcrib"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/txtcrib"
            android:contentDescription="@string/app_name"
            android:src="@drawable/crib" />
        <TextView
            android:id="@+id/txttab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table"
            android:textAlignment="center"
            android:textSize="22dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgtab"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/tab" />

    </LinearLayout>


</ScrollView>